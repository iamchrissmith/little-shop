%header
  = render "admin/shared/nav" if current_admin?
  %nav.navbar.navbar-inverse.navbar-main
    %ul.nav.navbar-nav
      %li= link_to "Home", items_path
      %li.dropdown
        %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
          Categories
          %b.caret
        %ul.dropdown-menu{"role" => "menu"}
          -categories.each do |category|
            %li
              = link_to category.name, category_path(category)
    %ul.nav.navbar-nav.navbar-right
      %li= link_to "Cart: #{@cart.total_count}", cart_path
      = render "shared/accounts-nav"
= render "shared/flash"
%div.row