%div{class: "item-#{item.id} item small" }
  %img{class: 'img-box'}
  %h3= link_to item.name, item_path(item), class: 'center-block text-center'
  = button_to "Add to Cart", cart_path(item_id: item.id), :class => "btn btn_primary center-block"
  %span{class: "pull-left btn-xs"}
    = item.status
  = link_to 'Edit', edit_admin_item_path(item), class: 'pull-right btn-xs btn-success' if current_admin?